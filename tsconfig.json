{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/index.ts"
    ]
}